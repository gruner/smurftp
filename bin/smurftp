#!/usr/bin/env ruby

require File.dirname(__FILE__) + '/../lib/smurftp'

input = ARGV[0]

if !input
  puts "Please specify a directory or configuration file to run smurftp from"
  exit
end

directory = ''
config_file = ''

if File.directory?(input)
  directory = input
  config_file = "#{input}/smurftp_config.yaml"
  unless File.file?(config_file)
    Smrftp::Base.generate_config(directory)
  end
elsif File.file?(input)
  config_file = input
else
  puts "Invalid directory or configuration file."
  exit
end

smurftp = Smurftp::Base.new(directory, config_file)
smurftp.run()